{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/templates",
            "methods": ["GET"],
            "dest": "app.py"
        },
        {
            "src": "/create_template",
            "methods": ["POST", "OPTIONS"],
            "dest": "app.py"
        },
        {
            "src": "/analyze",
            "methods": ["POST", "OPTIONS"],
            "dest": "app.py"
        },
        {
            "src": "/ask",
            "methods": ["POST", "OPTIONS"],
            "dest": "app.py"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_ENV": "production"
    }
}
