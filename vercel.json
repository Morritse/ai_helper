{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "maxDuration": 60
            }
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/builder",
            "dest": "/builder.html"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}
